# Environment variables untuk development

# Database Connection (Railway PostgreSQL atau lokal)
DATABASE_URL="postgresql://user:password@localhost:5432/penjahit_db?schema=public"

# JWT Secret (ganti dengan random string yang panjang)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=5000
NODE_ENV="development"

# Google Drive API (akan diisi nanti setelah setup Google Cloud Console)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI=""
GOOGLE_REFRESH_TOKEN=""
GOOGLE_DRIVE_FOLDER_ID=""

# CORS Origin (frontend URL)
FRONTEND_URL="http://localhost:3000"
